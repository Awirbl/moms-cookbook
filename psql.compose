version: '3.9'

services:
  postgres:
    image: postgres:14-alpine
    ports:
      - "5432:5432"
    networks:
      - postgres
    volumes:
       - postgres:/data/postgres
    environment:
      - POSTGRES_PASSWORD=password
      - POSTGRES_USER=yourpassword
      - POSTGRES_DB=recipies
networks:
  postgres:
    driver: bridge
volumes:
    postgres: